<?xml version="1.0" encoding="utf-8"?>
<!--
    Student Icon - Vector Drawable

    Material Design icon representing a student.
    Used in empty states and branding.

    Specifications:
    - Size: 24dp x 24dp (standard icon size)
    - Format: Vector drawable (scales perfectly)
    - Color: Inherits from tint attribute
    - Style: Material Design filled icon

    Usage:
    Icon(
        imageVector = ImageVector.vectorResource(R.drawable.ic_student),
        contentDescription = "Student"
    )

    @author Mary Tiluli
    @version 1.0.0
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:tint="?attr/colorControlNormal">

    <!-- Graduation cap top -->
    <path
        android:fillColor="@android:color/white"
        android:pathData="M5,13.18v4L12,21l7,-3.82v-4L12,17z"/>

    <!-- Graduation cap base -->
    <path
        android:fillColor="@android:color/white"
        android:pathData="M12,3L1,9l11,6 9,-4.91V17h2V9z"/>
</vector>
