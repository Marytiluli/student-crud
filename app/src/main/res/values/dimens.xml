<?xml version="1.0" encoding="utf-8"?>
<!--
    Dimension Resources

    Defines consistent spacing, sizes, and dimensions across the app.
    Follows Material Design 3 spacing guidelines (8dp baseline grid).

    Categories:
    - Spacing: Margins and padding
    - Text: Font sizes and line heights
    - Components: UI element sizes
    - Elevation: Shadow depths

    @author Mary Tiluli
    @version 1.0.0
-->
<resources>
    <!-- ======================== -->
    <!-- SPACING (8dp Grid)       -->
    <!-- ======================== -->

    <!-- Extra Small Spacing -->
    <dimen name="spacing_xs">4dp</dimen>

    <!-- Small Spacing -->
    <dimen name="spacing_sm">8dp</dimen>

    <!-- Medium Spacing (Default) -->
    <dimen name="spacing_md">16dp</dimen>

    <!-- Large Spacing -->
    <dimen name="spacing_lg">24dp</dimen>

    <!-- Extra Large Spacing -->
    <dimen name="spacing_xl">32dp</dimen>

    <!-- 2X Extra Large -->
    <dimen name="spacing_xxl">48dp</dimen>

    <!-- 3X Extra Large -->
    <dimen name="spacing_xxxl">64dp</dimen>

    <!-- ======================== -->
    <!-- CARD & CONTAINER         -->
    <!-- ======================== -->

    <!-- Card Corner Radius -->
    <dimen name="card_corner_radius">12dp</dimen>

    <!-- Card Elevation -->
    <dimen name="card_elevation">2dp</dimen>

    <!-- Card Padding -->
    <dimen name="card_padding">16dp</dimen>

    <!-- Dialog Corner Radius -->
    <dimen name="dialog_corner_radius">28dp</dimen>

    <!-- ======================== -->
    <!-- BUTTONS & FAB            -->
    <!-- ======================== -->

    <!-- Button Corner Radius -->
    <dimen name="button_corner_radius">20dp</dimen>

    <!-- Button Height -->
    <dimen name="button_height">48dp</dimen>

    <!-- Button Padding Horizontal -->
    <dimen name="button_padding_horizontal">24dp</dimen>

    <!-- FAB Size -->
    <dimen name="fab_size">56dp</dimen>

    <!-- FAB Icon Size -->
    <dimen name="fab_icon_size">24dp</dimen>

    <!-- ======================== -->
    <!-- TEXT INPUT               -->
    <!-- ======================== -->

    <!-- Text Field Height -->
    <dimen name="text_field_height">56dp</dimen>

    <!-- Text Field Corner Radius -->
    <dimen name="text_field_corner_radius">8dp</dimen>

    <!-- ======================== -->
    <!-- AVATAR & IMAGES          -->
    <!-- ======================== -->

    <!-- Avatar Size Small -->
    <dimen name="avatar_size_small">32dp</dimen>

    <!-- Avatar Size Medium -->
    <dimen name="avatar_size_medium">48dp</dimen>

    <!-- Avatar Size Large -->
    <dimen name="avatar_size_large">80dp</dimen>

    <!-- Avatar Size Extra Large -->
    <dimen name="avatar_size_xl">120dp</dimen>

    <!-- ======================== -->
    <!-- ICONS                    -->
    <!-- ======================== -->

    <!-- Icon Size Small -->
    <dimen name="icon_size_small">16dp</dimen>

    <!-- Icon Size Medium (Default) -->
    <dimen name="icon_size_medium">24dp</dimen>

    <!-- Icon Size Large -->
    <dimen name="icon_size_large">32dp</dimen>

    <!-- Icon Size Extra Large -->
    <dimen name="icon_size_xl">48dp</dimen>

    <!-- ======================== -->
    <!-- DIVIDERS & BORDERS       -->
    <!-- ======================== -->

    <!-- Divider Thickness -->
    <dimen name="divider_thickness">1dp</dimen>

    <!-- Border Width -->
    <dimen name="border_width">2dp</dimen>

    <!-- ======================== -->
    <!-- CHIP & TAG               -->
    <!-- ======================== -->

    <!-- Chip Height -->
    <dimen name="chip_height">32dp</dimen>

    <!-- Chip Corner Radius -->
    <dimen name="chip_corner_radius">16dp</dimen>

    <!-- Chip Padding Horizontal -->
    <dimen name="chip_padding_horizontal">12dp</dimen>

    <!-- ======================== -->
    <!-- APP BAR                  -->
    <!-- ======================== -->

    <!-- Top App Bar Height -->
    <dimen name="app_bar_height">64dp</dimen>

    <!-- Top App Bar Elevation -->
    <dimen name="app_bar_elevation">4dp</dimen>

    <!-- ======================== -->
    <!-- BOTTOM SHEET             -->
    <!-- ======================== -->

    <!-- Bottom Sheet Peek Height -->
    <dimen name="bottom_sheet_peek_height">80dp</dimen>

    <!-- Bottom Sheet Corner Radius -->
    <dimen name="bottom_sheet_corner_radius">28dp</dimen>

    <!-- ======================== -->
    <!-- SEARCH BAR               -->
    <!-- ======================== -->

    <!-- Search Bar Height -->
    <dimen name="search_bar_height">56dp</dimen>

    <!-- Search Bar Corner Radius -->
    <dimen name="search_bar_corner_radius">28dp</dimen>

    <!-- ======================== -->
    <!-- LOADING INDICATOR        -->
    <!-- ======================== -->

    <!-- Progress Indicator Size -->
    <dimen name="progress_indicator_size">48dp</dimen>

    <!-- Progress Indicator Stroke Width -->
    <dimen name="progress_indicator_stroke">4dp</dimen>

    <!-- ======================== -->
    <!-- MINIMUM TOUCH TARGET     -->
    <!-- ======================== -->

    <!-- Minimum Touch Target (Accessibility) -->
    <dimen name="min_touch_target">48dp</dimen>
</resources>
