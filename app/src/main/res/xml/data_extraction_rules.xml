<?xml version="1.0" encoding="utf-8"?>
<!--
    Data Extraction Rules for Android 12+

    Controls which data can be extracted during device-to-device transfers.
    Ensures user privacy while allowing essential data migration.

    @author Mary Tiluli
    @version 1.0.0
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all app data in cloud backups -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="datastore/" />
    </cloud-backup>

    <device-transfer>
        <!-- Allow all data during device-to-device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="datastore/" />
    </device-transfer>
</data-extraction-rules>
